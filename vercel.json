{
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    { "source": "/sitemap.xml", "destination": "/api/sitemap.xml.js" },
    { "source": "/robots.txt", "destination": "/api/robots.txt.js" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
